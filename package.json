{
  "name": "branch-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Branch API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "branch-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --skipLibCheck",
    "start": "node dist/index.js",
    "dev": "ts-node --skipLibCheck src/index.ts",
    "prepublishOnly": "npm run build",
    "check": "tsc --noEmit --skipLibCheck",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "keywords": [
    "branch",
    "mcp",
    "model-context-protocol",
    "api",
    "deep-linking"
  ],
  "author": {
    "name": "Branch Metrics",
    "email": "opensource@branch.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BranchMetrics-OpenSource/branch-mcp-server.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "axios": "^1.6.2",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
